<h1>Dr. <%= @doctor.name %> (<%= @doctor.department %>)</h1>
<table>
  <thead>
    <tr>
      <th>Date & Time</th>
      <th>Patient Name</th>
    </tr>
  </thead>
  <tbody>
    <% @doctor.appointments.each do |appt| %>
      <tr>
        <td><%= appt.formatted_datetime %></td>
        <td><%= link_to appt.patient.name, patient_path(appt.patient) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
